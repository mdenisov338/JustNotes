<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="android:windowSplashScreenBackground">@color/accent_1_200</item>
        <item name="actionOverflowButtonStyle">@style/Threedotsmenu</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/accent_1_900</item>
        <item name="colorTertiary">@color/accent_3_400</item>
        <item name="colorTertiaryContainer">@color/black</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/secondaryVariantColor</item>
        <item name="colorSecondaryContainer">@color/accent_2_50</item>
        <item name="colorSurfaceVariant">@color/SurfaceVariant</item>
        <item name="colorOnBackground">@color/colorFabIcon</item>
        <item name="colorOnContainer">@color/accent_1_1000</item>
        <item name="colorSurface">@color/accent_1_50</item>
        <item name="colorPrimaryContainer">@color/accent_1_0</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="Threedotsmenu" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

</resources>