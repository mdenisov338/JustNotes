<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowButtonStyle">@style/Threedotsmenu</item>


        <item name="colorAccent">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/md_theme_light_shadow</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorTertiaryContainer">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_dark_onTertiary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnContainer">@color/black</item>
        <item name="colorSurface">@color/md_theme_light_secondaryContainer</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_onPrimary</item>
        <item name="colorControlNormal">@android:color/black</item>

    </style>

    <style name="Threedotsmenu" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
</resources>