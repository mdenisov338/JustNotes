<resources>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
    <item name="colorAccent">@color/md_theme_dark_onPrimary</item>
    <item name="colorPrimary">@color/md_theme_light_primary</item>
    <item name="colorPrimaryVariant">@color/md_theme_dark_onSecondaryContainer</item>
    <item name="colorOnPrimary">@color/black</item>
    <item name="colorOnBackground">@color/md_theme_light_shadow</item>
    <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
    <item name="colorTertiaryContainer">@color/white</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/md_theme_dark_primaryContainer</item>
    <item name="colorSecondaryVariant">@color/md_theme_dark_onTertiary</item>
